"tests for output_filegroup"

load("//lib:output_filegroup.bzl", "output_filegroup")
load("//lib:output_files.bzl", "output_files")

output_filegroup(
    name = "copy",
    srcs = [
        "file1",
        "file2",
    ],
)

output_files(
    name = "pull_out_file1",
    paths = ["%s/file1" % package_name()],
    target = ":copy",
)

output_files(
    name = "pull_out_file2",
    paths = ["%s/file2" % package_name()],
    target = ":copy",
)

sh_test(
    name = "file1_test",
    timeout = "short",
    srcs = ["test.sh"],
    args = [
        "lib/tests/output_filegroup/file1",
        "$(execpath file1)",
        "$(execpath :pull_out_file1)",
    ],
    data = [
        "file1",
        ":pull_out_file1",
    ],
)

sh_test(
    name = "file2_test",
    timeout = "short",
    srcs = ["test.sh"],
    args = [
        "lib/tests/output_filegroup/file2",
        "$(execpath file2)",
        "$(execpath :pull_out_file2)",
    ],
    data = [
        "file2",
        ":pull_out_file2",
    ],
)

